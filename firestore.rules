rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // All RSVP documents live in /rsvp/{inviteCode}, where inviteCode == doc ID
    match /rsvp/{inviteCode} {
      // Allow clients to read (getDoc) their own doc *only* before the deadline
      allow get: if request.time < resource.data.rsvpDeadline;

      // Allow updates (e.g. writing RSVP fields) up until the deadline
      // and only if they don’t tamper with inviteCode
      allow update: if resource.data.inviteCode == inviteCode
                    && request.resource.data.inviteCode == inviteCode
                    && request.time < resource.data.rsvpDeadline;

      // No client‐side creation or deletion
      allow create, delete: if false;
    }
  }
}
