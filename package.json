{
  "name": "wedding-react",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "setup": "bash setup.sh",
    "seed": "cd functions && node seed.firebase.js && cd ..",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:functions": "cd functions && npm run build && cd ..",
    "build:all": "npm run build && npm run build:functions",
    "emulators": "firebase emulators:start --only firestore,auth,functions,hosting",
    "deploy": "npm run build:all && firebase deploy --only hosting,functions",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:functions": "npm run build:functions && firebase deploy --only functions",
    "lint": "eslint .",
    "preview": "vite preview",
    "clean": "rm -rf dist functions/lib node_modules functions/node_modules"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.4",
    "firebase": "^11.9.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "tailwindcss": "^4.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "lint-staged": "^15.5.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.1.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,html,css}": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
